{
	"name": "vim",
	"description": "Vim emulation for VS Code",
	"version": "0.0.1",
	"publisher": "hjkl",
	"engines": {
		"vscode": "0.10.x"
	},
	"categories": [
		"Others"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{ "command": "extension.sayHello", "title": "Hello World" },
			{ "command": "extension.showCmdLine", "title": "Vim: Show Command Line" }
		],
		"keybindings": [
			{
				"key": "Ctrl+H",
				"command": "cursorLeft",
				"when": "editorTextFocus"
			},
			{
				"key": "Ctrl+J",
				"command": "cursorDown",
				"when": "editorTextFocus"
			},
			{
				"key": "Ctrl+K",
				"command": "cursorUp",
				"when": "editorTextFocus"
			},
			{
				"key": "Ctrl+L",
				"command": "cursorRight",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"vscode": "0.10.x"
	}
}